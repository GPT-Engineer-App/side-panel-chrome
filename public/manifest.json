{
  "manifest_version": 3,
  "name": "Side Panel Extension",
  "version": "1.0",
  "description": "A Chrome extension that opens in the side panel.",
  "permissions": ["sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}